<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_activated"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/todo_completed_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:enabled="false"
        android:gravity="center"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/todo_taskDetails"
        android:layout_toLeftOf="@+id/todo_completed_checkBox"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:text="Task description will come here"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/todo_dueDate"
        android:layout_below="@+id/todo_taskDetails"
        android:layout_toLeftOf="@+id/todo_completed_checkBox"
        android:layout_width="match_parent"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textSize="10dp"
        android:text="Task due date will come here"
        android:layout_height="wrap_content" />

</RelativeLayout>